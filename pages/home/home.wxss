.page {
  padding: 24rpx 28rpx 90rpx;
}

.hero {
  position: relative;
  padding: 28rpx;
  border-radius: var(--radius-lg);
  background: linear-gradient(135deg, #1e6bff 0%, #4d8bff 48%, #87b4ff 100%);
  color: #ffffff;
  box-shadow: var(--shadow-1);
  overflow: hidden;
  animation: fadeUp 0.6s ease both;
}

.hero-orb {
  position: absolute;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.22);
  filter: blur(2rpx);
}

.orb-1 {
  width: 200rpx;
  height: 200rpx;
  top: -60rpx;
  right: -40rpx;
}

.orb-2 {
  width: 140rpx;
  height: 140rpx;
  bottom: -50rpx;
  left: -30rpx;
}

.hero-top {
  display: flex;
  align-items: center;
  gap: 12rpx;
  position: relative;
  z-index: 1;
}

.brand-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.9);
}

.brand-text {
  display: flex;
  flex-direction: column;
}

.brand-title {
  font-size: 30rpx;
  font-weight: 700;
}

.brand-subtitle {
  font-size: 22rpx;
  opacity: 0.85;
}

.hero-badge {
  margin-left: auto;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.2);
  font-size: 20rpx;
}

.hero-title {
  margin-top: 20rpx;
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  line-height: 1.35;
  position: relative;
  z-index: 1;
}

.hero-desc {
  margin-top: 8rpx;
  display: block;
  font-size: 24rpx;
  line-height: 1.6;
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

.hero-tags {
  margin-top: 18rpx;
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
  position: relative;
  z-index: 1;
}

.hero-tag {
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.2);
  font-size: 20rpx;
}

.hero-hint {
  margin-top: 18rpx;
  font-size: 20rpx;
  opacity: 0.8;
  position: relative;
  z-index: 1;
}

.section {
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-900);
}

.section-subtitle {
  font-size: 22rpx;
  color: var(--text-400);
}

.list {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.card {
  position: relative;
  display: flex;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: var(--radius-md);
  background: #ffffff;
  box-shadow: var(--shadow-2);
  overflow: hidden;
  animation: fadeUp 0.5s ease both;
}

.card-accent {
  position: absolute;
  left: 0;
  top: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(180deg, #7fb2ff 0%, #1e6bff 100%);
}

.card-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.card-title {
  display: -webkit-box;
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-900);
  line-height: 1.45;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.card-summary {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: var(--text-500);
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: auto;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  background: rgba(30, 107, 255, 0.12);
  color: var(--brand-600);
}

.tag.risk-high {
  background: #ffe7ea;
  color: #c03b4c;
}

.tag.risk-medium {
  background: #fff2d6;
  color: #d1781a;
}

.tag.risk-low {
  background: #e7f6ec;
  color: #2a9862;
}

.meta-text {
  font-size: 20rpx;
  color: var(--text-400);
}

.meta-dot {
  font-size: 20rpx;
  color: var(--text-400);
}

.thumb {
  width: 170rpx;
  height: 140rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #d6e6ff, #f2f7ff);
  display: flex;
  align-items: center;
  justify-content: center;
}

.thumb-image {
  width: 100%;
  height: 100%;
}

.thumb-placeholder {
  width: 100%;
  height: 100%;
  padding: 18rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
}

.thumb-line {
  height: 12rpx;
  border-radius: 999rpx;
  background: rgba(30, 107, 255, 0.25);
}

.thumb-line.short {
  width: 70%;
}

.status {
  margin-top: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: var(--text-400);
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
