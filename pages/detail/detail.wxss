.page {
  padding: 24rpx 28rpx 90rpx;
}

.status {
  margin-top: 140rpx;
  text-align: center;
  font-size: 24rpx;
  color: var(--text-400);
}

.hero-card {
  padding: 26rpx;
  border-radius: var(--radius-lg);
  background: #ffffff;
  box-shadow: var(--shadow-2);
  animation: fadeUp 0.5s ease both;
}

.title {
  display: block;
  font-size: 38rpx;
  font-weight: 700;
  color: var(--text-900);
  line-height: 1.35;
}

.lead {
  display: block;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: var(--text-500);
  line-height: 1.7;
}

.rich {
  display: block;
}

.meta {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  background: rgba(30, 107, 255, 0.12);
  color: var(--brand-600);
}

.tag.risk-high {
  background: #ffe7ea;
  color: #c03b4c;
}

.tag.risk-medium {
  background: #fff2d6;
  color: #d1781a;
}

.tag.risk-low {
  background: #e7f6ec;
  color: #2a9862;
}

.meta-text {
  font-size: 20rpx;
  color: var(--text-400);
}

.meta-dot {
  font-size: 20rpx;
  color: var(--text-400);
}

.cover {
  width: 100%;
  height: 360rpx;
  margin-top: 20rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-2);
}

.content-card {
  margin-top: 20rpx;
  padding: 24rpx;
  border-radius: var(--radius-lg);
  background: #ffffff;
  box-shadow: var(--shadow-2);
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.paragraph {
  font-size: 26rpx;
  color: var(--text-700);
  line-height: 1.8;
}

.warning {
  padding: 16rpx 18rpx;
  border-radius: 12rpx;
  background: #eef4ff;
  border-left: 6rpx solid var(--brand-600);
}

.warning-title {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: var(--brand-900);
  margin-bottom: 6rpx;
}

.warning-text {
  font-size: 24rpx;
  color: var(--text-700);
  line-height: 1.6;
}

.rich-body {
  font-size: 26rpx;
  color: var(--text-700);
  line-height: 1.8;
}

.image-block {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.image {
  width: 100%;
  border-radius: 16rpx;
}

.caption {
  font-size: 22rpx;
  color: var(--text-400);
}

.sources-card {
  margin-top: 20rpx;
  padding: 22rpx 24rpx;
  border-radius: var(--radius-md);
  background: #ffffff;
  box-shadow: var(--shadow-2);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--text-900);
}

.source-item {
  font-size: 22rpx;
  color: var(--text-500);
}

.disclaimer {
  margin-top: 18rpx;
  padding: 18rpx 20rpx;
  border-radius: var(--radius-md);
  background: #f0f4ff;
  border: 1rpx solid #d6e4ff;
}

.disclaimer-title {
  display: block;
  font-size: 22rpx;
  font-weight: 700;
  color: var(--brand-900);
  margin-bottom: 6rpx;
}

.disclaimer-text {
  font-size: 22rpx;
  color: var(--text-500);
  line-height: 1.6;
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
